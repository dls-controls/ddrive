file "motor.db" {
  pattern
  {                      P ,        DTYP ,       PORT , ADDR ,     DESC , EGU , DIR , VMAX , VELO , VBAS , ACCL , BDST , BVEL , BACC ,  MRES , PREC , DHLM ,  DLLM , RTRY ,   RDBD ,  DLY , OFF , INIT }
  { "\$(SYS){$(DEV)-Ax:1}" , "asynMotor" , "\$(PORT)" ,    0 , "Axis 1" ,  um , Pos , 10.0 ,  0.5 , 0.50 ,  0.2 ,    0 ,    1 ,   .2 , 0.001 ,    8 , 3500 , -6001 ,    0 , 0.0005 , 0.05 ,   0 ,   "" }
  { "\$(SYS){$(DEV)-Ax:2}" , "asynMotor" , "\$(PORT)" ,    1 , "Axis 2" ,  um , Pos , 10.0 ,  0.5 , 0.50 ,  0.2 ,    0 ,    1 ,   .2 , 0.001 ,    8 , 3500 , -6001 ,    0 , 0.0005 , 0.05 ,   0 ,   "" }
  { "\$(SYS){$(DEV)-Ax:3}" , "asynMotor" , "\$(PORT)" ,    2 , "Axis 3" ,  um , Pos , 10.0 ,  0.5 , 0.50 ,  0.2 ,    0 ,    1 ,   .2 , 0.001 ,    8 , 3500 , -6001 ,    0 , 0.0005 , 0.05 ,   0 ,   "" }
}

file "$(TOP)/db/ddrive.db"
{
  pattern
  {      P,         R,    PORT,    ADDR, TIMEOUT }
  { "\$(SYS)", "{$(DEV)-Ax:1}", "\$(PORT)",    0,     0.3 }
  { "\$(SYS)", "{$(DEV)-Ax:2}", "\$(PORT)",    1,     0.3 }
  { "\$(SYS)", "{$(DEV)-Ax:3}", "\$(PORT)",    2,     0.3 }
}


file "$(EPICS_BASE)/db/asynRecord.db"
{
  pattern
  {                       P ,   R ,       PORT , ADDR , OMAX , IMAX }
  {    "\$(CTLSYS){$(DEV)}" , asyn, "\$(PORT)" ,    0 ,  256 ,  256 }
}
